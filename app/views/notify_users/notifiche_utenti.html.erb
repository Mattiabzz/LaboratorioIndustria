<div class="notifche_nuove">
    <% if @notifiche_nuove.empty? %>
        <p> <h6>Non ci sono nuove notifiche da leggere</h6> </p>
    <% else %>
        <p> <h6>Notifiche nuove:</h6></p>
        <ol>
        <% @notifiche_nuove.each do |n_nuova| %>
            <li><%= n_nuova.tipo %></li>
        
        <% end %>
        </ol>

    <% end %>
</div>

<div class="notifche_vecchie">
    <% if @notifiche_vecchie.empty?%>
        <p> <h6>Non ci sono vecchie notifiche da leggere </h6></p>
    <% else %>
        <p> <h6>Notifiche vecchie:</h6></p>
        <ol>
        <% @notifiche_vecchie.each do |n_vecchie| %>
            <li><%= n_vecchie.tipo %></li>
        
        <% end %>
        </ol>

    <% end %>
</div>

