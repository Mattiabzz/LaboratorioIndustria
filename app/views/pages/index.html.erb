<div class="login-box">
  <h1>Login Utente</h1>
  <%= form_with(url: login_path, method: :post) do |form| %>
    <!-- Campi del form per il login utente -->
    <%= form.label :email %>
    <%= form.email_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "Login" %>
  <% end %>
</div>

<div>
  <p><h6>Se non sei registrato scegli come vuoi registrarti: </h6></p>
</div>

