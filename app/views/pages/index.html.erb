<h1>HomePage</h1>
<p>Scegli il tuo metodo cosa desideri fare</p>


<div class="login-box">
  <h2>Login Utente</h2>
  <%= form_with(url: login_path, method: :post) do |form| %>
    <!-- Campi del form per il login utente -->
    <%= form.label :email %>
    <%= form.email_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "Login" %>
  <% end %>
</div>

<div class="registration-link">
    <%= link_to "Registati come manager", new_manager_path %>
</div>

<div class="registration-link">
    <%= link_to "Registati come utente", new_user_path %>
</div>

