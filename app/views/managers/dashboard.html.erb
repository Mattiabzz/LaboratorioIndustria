<% if current_user %>
    <h1>Dashboard di <%= current_user.nome %>!</h1>
    <p>Benvenuto nella dashboard da manager</p>


<% end %>


<div class="notifiche">
    <% if @notifiche != 0 %>
        <p>ci sono <%=@notifiche%> nuove notifiche</p>
    <% else %>
        <p>Non ci sono nuove notifiche</p>
    <% end %>
     <%= link_to "Controlla le tue notifiche", notifiche_manager_path(manager_id: @m.id) %>
</div>

<div class="registration-link">
    <%= link_to "Crea un nuovo evento", new_event_path%>
</div>

<div>
<% if @events.present? %>
  <h2>Eventi del manager <%= @m.nome %></h2>
            <table>
            <thead>
                <tr>
                <th>Nome dell'evento</th>
                <th>Descrizione</th>
                <th>Luogo</th>
                <th>Citta</th>
                <th>Via</th>
                <th>Data Inizio</th>
                <th>Data Fine</th>
                <th>Capacita</th>
                <th>Capaccita corrente</th>
                <th>Ispeziona</th>
                <th>Modifica</th>
                
                <!-- Aggiungi altre colonne secondo necessità -->
                </tr>
            </thead>
            <tbody>
                <% @events.each do |event| %>
                <tr>
                    <td><%= event.nome %></td>
                    <td><%= event.descrizione %></td>
                    <td><%= event.luogo %></td>
                    <td><%= event.citta %></td>
                    <td><%= event.via %></td>
                    <td><%= event.data_inizio %></td>
                    <td><%= event.data_fine %></td>
                    <td><%= event.capacita %></td>
                    <td><%= event.capacita_corrente %></td> 
                    <td> <%= link_to "Ispeziona partecipanti", ispeziona_eventi_path(event_id: event.id) %></td>
                    <td><%= link_to "Modifica evento", edit_event_path(event) %></td>
                    <!-- Aggiungi altre colonne secondo necessità -->
                </tr>
                <% end %>
            </tbody>
            </table>
<% else %>
  <p>Nessun evento trovato per questo manager.</p>
<% end %>
</div>
<!-- Bottone di logout -->
<% if current_user %>
    <%= button_to "Logout", logout_manager_path, method: :delete %>
<% end %>

